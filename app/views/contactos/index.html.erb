
<%= stylesheet_link_tag 'datatable' %>
<section>


<div class="datatable-container">
<h1>Solicitudes de Contacto</h1>
 <table class="datatable">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Nombre</th>
        <th>Email</th>
        <th>Tel√©fono</th>
        <th>Mensaje</th>
      </tr>
    </thead>

    <tbody>
    <% @contactos.order("id desc").each do |contacto| %>
      <tr>        
        <td><%= contacto.created_at %></td>
        <td><%= contacto.nombre %></td>
        <td><%= contacto.email %></td>
        <td><%= contacto.telefono %></td>
        <td><%= contacto.mensaje %></td>
      </tr>
   <% end %>
    </tbody>
  </table>
  <%= will_paginate @contactos, next_label: "Siguiente", previous_label: "Anterior" %>
</div>
</section>